{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@ds/core": ["../packages/core/src"],
      "@ds/core/*": ["../packages/core/src/*"],
      "@ds/utils": ["../packages/utils/src"]
    },
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "src/**/*.scss",
    "**/*.test.tsx",
    "**/setup_test-env.ts"
  ],
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/utils" }
  ],
  "include": ["src"]
}