{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react-jsx",
    "composite": true,
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"],
      "@ds/core": ["../packages/core/src"],
      "@ds/utils": ["../packages/utils/src"]
    }
  },
  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.scss",
    "src/**/*.d.ts",
    "src/**/*.json"  // JSON 파일 포함
  ],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../packages/core" },
    { "path": "../packages/utils" }
  ]
}